
<p id="notice"><%= notice %></p>

<h1>Listing Apps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
      <th>Rating</th>
      <th>Category Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
    <tr class="<%= cycle('list-line-odd', 'list-line-even')%>">
      <td class="list-description">
      <tr>
          <td><%= app.name %></td>
          <td><%= app.rating %></td>
          <td><%= app.price %></td>
          <td><%= image_tag app.image.url(:thumb) %></td>
          <% if app.category %>
          <p>
            <td><strong>Category:</strong><%= app.category.name %></td>
          </p>
          </tr>
          <% end %>

          <td class="list-actions">
            <td><%= link_to 'Show', app %></td>
            <td><%= link_to 'Edit', edit_app_path(app) %></td>
            <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New App', new_app_path %>

