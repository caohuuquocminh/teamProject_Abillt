<h1>Edit Application</h1>

<%= simple_form_for @app, :html => { :multipart => true } do |f| %>
	<%= f.select :category_id,@categories %>
	<%= f.file_field :app_img %>
	<%= f.input :name, label: "Name of the application" %>
	<%= f.input :description %>
	<%= f.input :link %>
	<%= f.input :developer %>
	<%= f.input :operation %>
	<%= f.input :price %>
	<%= f.button :submit %>

<% end %>
