<div class="row">
	<div class="col-md-4">
	<td><%= image_tag @apps.image.url(:thumb) %></td>
	</div>
	<div class="col-md-8">
		<div class="app-info">
		<h2 class="app-name">Name :<%= @apps.name %></h2>
		<h4>Category : <%= @apps.category.name %></h4>
		<h2 class="avg-rating">Average Rating</h2>
		<div class="average-review-rating" data-score=<%= @average_review %>></div>
		<span class="number-of-reviews">Based on <%= @apps.reviews.count %> reviews</span>
		<p class="app-desc">Description :<%= @apps.description %></p>
		<p class="app-name">Link :<a href="<%= @apps.link %>"><%= @apps.link %></p></a>
		<p class="app-name">Developer :<%= @apps.developer %></p>
		<p class="app-name">Operation System :<%= @apps.operation %></p>
		<p class="app-name">Price :<%= @apps.price %></p>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-4">

		<%= render @apps.reviews %>
		<div>
				<%= link_to "Add Review", new_app_review_path(@apps) %>
		</div>
	</div>
</div>


<%= link_to 'Back', apps_path %>

